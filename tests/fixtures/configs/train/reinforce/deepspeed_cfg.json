{
    "fp16": {
         "enabled": false
     },
     "bf16": {
        "enabled": true
     },
     "optimizer": {
      "type": "AdamW",
      "params": {
          "lr": "auto",
          "betas": "auto",
          "eps": "auto",
          "weight_decay": "auto"
          }
      },
     "scheduler": {
     "type": "WarmupDecayLR",
     "params": {
         "warmup_min_lr": "auto",
         "warmup_max_lr": "auto",
         "warmup_num_steps": "auto",
         "total_num_steps": "auto"
         }
     },
  
    "zero_optimization": {
        "stage": 3,
        "allgather_partitions": true,
        "allgather_bucket_size": 2e8,
